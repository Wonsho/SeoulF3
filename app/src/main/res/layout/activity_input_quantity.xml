<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".input.inputquantity.InputQuantityActivity">

    <TextView
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:text="C-01-01"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:textStyle="italic"
        android:layout_margin="5dp"
        android:text=" 직결피스 PW 유색 "
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_position"
        android:id="@+id/tv_itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="italic"
        android:layout_margin="5dp"
        android:text="14*80"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_itemName"
        android:id="@+id/tv_itemSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_margin="5dp"
        android:text="입고할 품목의 수량을 입력하세요."
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_itemSize"
        android:id="@+id/tv_ex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_num"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="35dp"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/tv_ex"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="20dp"
        android:text="BOX"
        android:id="@+id/tt"
        app:layout_constraintLeft_toLeftOf="@id/tv_num"
        app:layout_constraintRight_toRightOf="@id/tv_num"
        app:layout_constraintTop_toBottomOf="@id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/btn_rescan"
        android:backgroundTint="#E2687BF6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/tt"
        android:padding="5dp"
        android:text=" 다른자리 스캔하기 "
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@id/guideline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TableLayout
        android:layout_margin="10dp"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline3">


        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/n1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="1"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/n2"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="2"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/n3"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="3"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/n4"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="4"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/n5"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="5"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/n6"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="6"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/n7"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="7"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/n8"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="8"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/n9"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="9"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:backgroundTint="#FB8A51"
                android:id="@+id/c"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="C"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/n0"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="0"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <Button
                android:backgroundTint="#FD742E"
                android:id="@+id/btn_addGoods"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="확인"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>